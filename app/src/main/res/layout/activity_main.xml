<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <com.makhmutov.customwatchview.CustomWatchView
        android:id="@+id/customWatchView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:hasNumbers="false"
        app:hasSeconds="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mainColor="#832B2B"
        app:backgroundColor="#2196F3"
        app:hasDivisions="true"
        app:isSquare="false"/>

    <com.makhmutov.customwatchview.CustomWatchView
        android:id="@+id/customWatchView2"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:hasNumbers="true"
        app:hasSeconds="true"
        app:hasDivisions="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:isSquare="true"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.makhmutov.customwatchview.CustomWatchView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:hasNumbers="true"
        app:hasSeconds="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:mainColor="#673AB7"
        app:backgroundColor="#8BC34A"/>

    <com.makhmutov.customwatchview.CustomWatchView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:hasNumbers="false"
        app:hasSeconds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:mainColor="#FF5722"
        app:backgroundColor="#FFEB3B"/>

</androidx.constraintlayout.widget.ConstraintLayout>